<h1>EatDaBurger</h1>

<h2>Burger Vendors</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>

        <p>
          {{this.id}}.  {{this.name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">Devour</button>
          </form>

        </p>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers That Have Been Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        <p>
          {{this.id}}.  {{this.name}}
        </p>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Vendor</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
